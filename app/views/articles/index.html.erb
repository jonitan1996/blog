<h1>Hola amigos</h1>


 <%= link_to 'New article', new_article_path, class:'link1'%>

<%= link_to 'New search', search_path, class:'link2' %>




<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to 'Show', article_path(article) %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
     <td><%= link_to 'Destroy', article_path(article),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>
<div class="pagination">
<%= page_entries_info @articles %><%= paginate @articles %>
</div>



<p>
<%= link_to 'New subarticle', new_subarticle_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
<% @subarticles.each do |subarticle| %>
  <tr>
    <td><%= subarticle.title %></td>
    <td><%= subarticle.text %></td>
    <td><%= link_to 'Show', subarticle_path(subarticle) %></td>
    <td><%= link_to 'Edit', edit_subarticle_path(subarticle) %></td>
    <td><%= link_to 'Destroy', subarticle_path(subarticle),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
